
@{
    /**/

    var locations = (List<LocationViewModel>)ViewBag.Locations;
    var assetModels = (List<AssetModelViewModel>)ViewBag.AssetModels;
}

<div class="row">
    <div class="col-lg-12 col-xs-12 col-sm-12">
        <div class="portlet light bordered">

            <div class="portlet-body">
                <div class="row">
                    <a href="javascript:void;" id="btnAddNew" class="btn red custom-add-new">[|[Add New Asset]|]</a>
                    <table id="tblAssets" class="display table table-responsive" style="width:100%;zoom:0.8;">
                        <thead>
                            <tr>

                                <th>[|[SerialNumber]|]</th>
                                <th>[|[EPC]|]</th>
                                <th>[|[Model]|]</th>
                                <th>[|[ManufactureDate]|]</th>
                                <th>[|[PurchaseDate]|]</th>
                                <th>[|[Zone]|]</th>
                                <th>[|[PrintedDate]|]</th>
                                <th>[|[IsPrinted]|]</th>
                                <th>[|[IsAssigned]|]</th>
                                <th>[|[Edit]|]</th>
                                <th>[|[Delete]|]</th>
                                <th>[|[Assign]|]</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">[|[Add || Modify (Asset)]|]</h4>
            </div>
            <form role="form" id="form-data" method="post" novalidate="novalidate">
                <input type="hidden" id="Id" name="Id" />
                <div class="modal-body">
                    <div class="scroller" style="height:421px;" data-always-visible="1" data-rail-visible1="1">
                        <div class="col-md-12 ">
                            <!-- BEGIN SAMPLE FORM PORTLET-->



                            <div class="form-body">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[SerialNumber]|]</label>
                                            <div class="input-group">

                                                <input id="SerialNumber" name="SerialNumber" type="text" class="form-control custom-round" placeholder="[|[SerialNumber]|]" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[EPC]|]</label>
                                            <div class="input-group">

                                                <input id="Epc" name="Epc" type="text" class="form-control custom-round" placeholder="EPC" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[Location]|]</label>
                                            <select id="LocationId" class="form-control" name="LocationId">
                                                <option>[|[Choose]|]</option>
                                                @foreach (var location in locations)
                                        {
                                            <option value="@location.Id">@location.Name</option>
                                }


                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[Zone]|]</label>
                                            <select id="ZoneId" class="form-control" name="ZoneId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>[|[Model]|]</label>
                                            <select id="ModelId" class="form-control" name="ModelId" required>
                                                <option>[|[Choose]|]</option>
                                                @foreach (var assetModel in assetModels)
                                        {
                                            <option value="@assetModel.Id">@assetModel.Name</option>
                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[Manufacture Date]|]</label>
                                            <input id="ManufactureDate" type="date" class="form-control" name="ManufactureDate" />
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[Purchase Date]|]</label>
                                            <input id="PurchaseDate" type="date" class="form-control" name="PurchaseDate" />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[Arabic Description]|]</label>
                                            <textarea id="DescriptionAr" class="form-control" rows="2" name="DescriptionAr"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>[|[English Description]|]</label>
                                            <textarea id="DescriptionEn" class="form-control" rows="2" name="DescriptionEn"></textarea>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary" name="signup" value="Sign up">Sign up</button>
                                    </div>
                                </div>
                            </div>





                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button  type="submit" class="btn red">[|[Save changes]|]</button>

                    <button type="button" data-dismiss="modal" class="btn dark btn-outline">[|[Close]|]</button>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/additional-methods.min.js">

    </script>


    <script src="~/Application/Scripts/asset.js"></script>
}
@section styles{
    <style>
        .slimScrollDiv {
            height: 380px !important;
        }
    </style>
}